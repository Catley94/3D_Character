{
  "name": "ai-character-assistant",
  "version": "1.0.0",
  "description": "A cute AI companion that floats on your desktop",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:linux": "npm run build && electron-builder --linux",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:all": "npm run build && electron-builder --linux --mac --win"
  },
  "keywords": [
    "ai",
    "assistant",
    "desktop",
    "overlay",
    "gemini"
  ],
  "author": "Sam",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.10",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0"
  },
  "build": {
    "appId": "com.sam.ai-character-assistant",
    "productName": "AI Character Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/icon.png",
      "maintainer": "sam@example.com",
      "executableArgs": [
        "--no-sandbox"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    }
  }
}